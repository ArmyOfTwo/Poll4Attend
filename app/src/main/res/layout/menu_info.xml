<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="23dp"
        android:text="Poll4Attendance v1.0"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginLeft="10dp"
        android:text="Created By: ArmyOf2"
        android:textColor="@color/colorHint"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:text="This app is meant for teachers to use. The students can vote if they are going to attend the next lecture or not. This will give the professor a fair idea of the student strength for the next day and he can prepare material for them accordingly"
        android:textColor="@color/colorHint"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="32dp"
        android:text="Instructions: "
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="15dp"
        android:maxLines="10"
        android:scrollbars="vertical"

        android:text="
\n► Sign-in with your Google account
\n► Tap on 'Proceed'
\n► Tap on create server (if you are the teacher)
\n► Fill in the required details
\n► Tap 'Create'
\n► Now share your lecture title with your students
\n► Students can enter their name and lecture title and tap 'Join'
\n► Choose your own vote
\n► Tap 'Confirm' to send vote
\n► Checkout the Pie-chart! (Tap it, Spin it etc.)
\n► Polling ends on the set-date but you can still view the results
\n► Server self-destructs one day after polling ends
\n► Enjoy!"
        android:textColor="@color/colorHint"
        android:textSize="18sp" />

</RelativeLayout>